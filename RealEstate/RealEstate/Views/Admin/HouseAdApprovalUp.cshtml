<style>
    .image-gallery {
        text-align: center;
        margin: 20px 0;
    }
  
    .main-image img {
        width: 80%; 
        max-height: 500px;
        object-fit: cover; 
        margin-bottom: 20px;
        border-radius: 10px;
        border: 1px solid #ccc;
    }
  
    .thumbnail-images {
        display: flex;
        justify-content: center;
        gap: 10px;
    }
  
    .thumbnail {
        width: 100px;
        height: 100px;
        object-fit: cover;
        cursor: pointer;
        border-radius: 5px;
        border: 1px solid #ddd; 
        transition: transform 0.2s ease;
    }
  
    .thumbnail:hover {
        transform: scale(1.05); 
        border-color: #ddd; 
    }
  
    .card {
        margin-bottom: 20px;
        border: 1px solid #eaeaea; 
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1); 
    }
  
    .card-header {
        background-color: #f5f5f5; 
        border-bottom: 1px solid #ddd; 
        text-align: center;
        padding: 15px;
    }
  
    .card-body {
        padding: 20px;
    }
  
    table {
        width: 100%;
        margin-top: 20px;
    }
  
    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd; 
    }
  
    th {
        background-color: #f7f7f7; 
        font-weight: bold;
    }
  
    td {
        background-color: #fff;
    }
  
  </style>
  <div class="cardheader" style="background-color: #ccc;border-radius: 10%;">
    <h3 style="background-color: #ccc; text-align: center;border-radius: 10%;height: 4rem;padding-top: 1.3rem;margin-top: -0.5rem;">İlan Ön İzleme Sayfası</h3>
  </div>
  
  <h2 style="text-align: center; margin-top: 3rem;">@Model.House.AdTitle</h2>
  
  <div class="card">
    <div class="card-body">
        <div class="image-gallery" style="margin-top: 1%;">
            <div class="main-image">
                <img id="bigImage" src="@Model.House.PromotionalPicture" alt="House Image" />
            </div>
        </div>
    </div>
  </div>
  
  <div style="width: 75em; height: auto; margin-left: auto; margin-right: auto;">
    @foreach (var img in Model.HouseImages)
    {
        <img src="@img.ImgUrl" alt="House Image" class="thumbnail" onclick="changeImage(this)" />
    }
  </div>
  
  <div class="card mb-4" style="margin-top: 5rem;">
    <div class="card-header bg-light">
        <h5 class="card-title text-center">İlanı Ekleyen Kişi Bilgileri</h5>
    </div>
    <div class="card-body" style="margin-top: 5%;">
        <p><strong>Ad:</strong> @Model.House.AppUser.UserName</p>
        <p><strong>Soyad:</strong> @Model.House.AppUser.LastName</p>
        <p><strong>Telefon Numarası:</strong> @Model.House.AppUser.PhoneNumber</p>
        <p><strong>E-posta:</strong> @Model.House.AppUser.Email</p>
        <div class="d-flex justify-content-center mt-3">
            <a href="@Url.Action("OtherAds", "Identity", new { userId = Model.House.AppUser.Id })" class="btn btn-outline-primary">Diğer İlanlar</a>
        </div>
    </div>
  </div>
  
  <div class="card">
    <div class="card-header">
        <h4 style="text-align: center;">İlan Açıklaması</h4>
    </div>
    <div class="card-body">
        <p>@Html.Raw(Model.House.Explanation)</p>
    </div>
  </div>
  
  <div class="card" style="width: 50rem; margin-top: 3rem; margin-left: auto; margin-right: auto;">
    <div class="card-header" style="text-align: center; font-size: 22px;">İlan Bilgileri</div>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="row">İlan Numarası</th>
                <td>@Model.House.AdNumber</td>
            </tr>
            <tr>
                <th scope="row">Ülke</th>
                <td>@Model.House.Country</td>
            </tr>
            <tr>
                <th scope="row">İl</th>
                <td>@Model.House.Province</td>
            </tr>
            <tr>
                <th scope="row">İlçe</th>
                <td>@Model.House.County</td>
            </tr>
            <tr>
                <th scope="row">Mahalle</th>
                <td>@Model.House.Neighborhood</td>
            </tr>
            <tr>
                <th scope="row">Sokak</th>
                <td>@Model.House.Street</td>
            </tr>
            <tr>
                <th scope="row">Emlak Tipi</th>
                <td>@Model.House.AdType</td>
            </tr>
            <tr>
                <th scope="row">Konut Tipi</th>
                <td>@Model.House.HouseType</td>
            </tr>
            <tr>
                <th scope="row">İlan Fiyatı</th>
                <td>@Model.House.Price</td>
            </tr>
            <tr>
                <th scope="row">Bürüt M2</th>
                <td>@Model.House.m2b m2</td>
            </tr>
            <tr>
                <th scope="row">Net M2</th>
                <td>@Model.House.m2n</td>
            </tr>
            <tr>
                <th scope="row">Oda Sayısı</th>
                <td>@Model.House.NumberOfRooms</td>
            </tr>
            <tr>
                <th scope="row">Bina Yaşı</th>
                <td>@Model.House.BuildingHistory</td>
            </tr>
            <tr>
                <th scope="row">Bina Kat Sayısı</th>
                <td>@Model.House.NumberOfFloors</td>
            </tr>
            <tr>
                <th scope="row">Bulunduğu Kat</th>
                <td>@Model.House.Floor</td>
            </tr>
            <tr>
                <th scope="row">Isıtma Tipi</th>
                <td>@Model.House.Heating</td>
            </tr>
            <tr>
                <th scope="row">Asansör</th>
                <td>@Model.House.Elevator</td>
            </tr>
            <tr>
                <th scope="row">Otopark</th>
                <td>@Model.House.CarPark</td>
            </tr>
            <tr>
                <th scope="row">Aidat Ücreti</th>
                <td>@Model.House.Dues</td>
            </tr>
        </tbody>
    </table>
  </div>
  <div class="card">
    <div class="cardheader">
        <a asp-controller="Admin" asp-action="HomeTransactionForm" asp-route-id="@Model.House.HouseId"><button class="btn btn-sucees">İşlem Sayfası</button></a>
    </div>
  </div>
  
  <script>
    function changeImage(imgElement) {
        var bigImage = document.getElementById("bigImage");
        bigImage.src = imgElement.src; 
    }
  </script>
  