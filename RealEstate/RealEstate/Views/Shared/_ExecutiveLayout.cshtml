@if(TempData["message"] != null)
{
  <div class="alert alert-warning">
    @TempData["message"]
  </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstate.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/img/Favicon/favicon-32x32.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.3.3-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
  .offcanvas-end {
      width: 250px;
      background-color: #343a40;
      color: white;
  }
  .offcanvas-end a {
      color: white;
      text-decoration: none;
  }
  .offcanvas-end .nav-link {
      padding: 10px;
  }
</style>
</head>
<body>
    <header>
      <nav class="navbar navbar-expand-lg bg-dark">
        <div style="width: 130em; margin-left: 3em;">
          <img style="width: 10em;height: 100%;border-radius: 5%;" src="/img/Logo/Logo.png" alt="">
        </div>
        
        

      <div style=" margin-left: 88em; position: static;" class="d-flex align-items-center">
      @if(User.Identity.IsAuthenticated == true)
      {
        <div style="margin-left: -100%; width: 15em;padding-top: 1%; margin-top: 3%">
            <i style="color: whitesmoke; font-size: 24px; position:fixed;" class="bi bi-person-circle"></i>
            <p style="color:whitesmoke; font-size: 20px; margin-left: 1.8em;margin-top: 1.2%;">@User.Identity.Name</p>
  
            <button style="margin-left: 13em;margin-top: -5em;" class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
              <i class="bi bi-list"></i>
            </button>
          </div>
      }
      else

      
      {
        <a asp-controller="Identity" asp-action="Login">  
          <button data-mdb-ripple-init type="button" class="btn btn-primary me-3">Giriş</button>
        </a>
        <a asp-controller="Identity" asp-action="Register">  
          <button data-mdb-ripple-init type="button" class="btn btn-primary me-3">Kayıt Ol</button>
        </a>
      }
    </div>
      </nav>
    </header>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel" data-bs-backdrop="false">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sidebarLabel">Menü</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          @if (User.IsInRole("Admin"))
          {
            <div class="menu-container">
              <div class="menu-header" onclick="toggleMenu('roleMenu')">Role İşlemleri <i class="fa-solid fa-down"></i></div>
              <ul class="menu-items" id="roleMenu">
                <li><a asp-controller="Role" asp-action="RoleCreate">Role Ekle</a></li>
                <li><a asp-controller="Role" asp-action="RoleOperations">Role İşlemleri</a></li>
              </ul>
          
              <!-- Kullanıcı İşlemleri -->
              <div class="menu-header" onclick="toggleMenu('userMenu')">Kullanıcı İşlemleri <i class="fa-solid fa-down"></i></div>
              <ul class="menu-items" id="userMenu">
                <li><a href="#">Kullanıcı Ekle</a></li>
                <li><a href="#">Kullanıcı Sil</a></li>
              </ul>
            </div>
            <li><a asp-controller="Admin" asp-action="AdminAdControlPanel"> Sil</a></li>
            
           
            <ul class="navbar-nav">
              <li class="nav-item">
                <a asp-controller="Identity" asp-action="MyAccount" class="nav-link">Hesabım</a>
              </li>
              <li class="nav-item">
                <a asp-controller="Identity" asp-action="Logout" class="nav-link">Çıkış</a>
              </li>
            </ul>
            
          }
          else{

          <li class="nav-item">
            <a class="nav-link" href="#">Hesabım</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">İlanlarım</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Favorilerim</a>
          </li>
          <li class="nav-item">
            <a asp-controller="Identity" asp-action="Logout" class="nav-link">Çıkış</a>
          </li>
        }
        </ul>
      </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>