@if(TempData["message"] != null)
{
  <div class="alert alert-warning">
    @TempData["message"]
  </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstate.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/img/Favicon/favicon-32x32.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
  .offcanvas-end {
      width: 250px;
      background-color: #343a40;
      color: white;
  }
  .offcanvas-end a {
      color: white;
      text-decoration: none;
  }

  .offcanvas-end .nav-link {
      padding: 10px;
  }




.menu-container {
  width: 200px;
  border-radius: 5px;
  background-color: #343a40;
  font-size: 20px;
}

.menu-header {
  background-color: #343a40;
  color: white;
  cursor: pointer;
}

.menu-items {
  list-style-type: none;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
}

.menu-items li {
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.menu-items li a {
  text-decoration: none;
}



.menu-container .menu-header.active + .menu-items {
  max-height: 100px; 
}
</style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div  class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
          <img src="/img/Logo/Logo.png" alt="Logo" style="width: 10em; height: auto; border-radius: 5px;">
        </a>
  
        <form class="d-flex mx-auto" action="/RealEstate/Search" method="get" style="width: 60%;">
          <div class="input-group">
              <input class="form-control" name="query" type="search" placeholder="Geleceğiniz İçin Arama yapın..." aria-label="Arama" style="border-radius: 10px 0 0 10px;">
              <button class="btn btn-light" type="submit" style="border-radius: 0 10px 10px 0;">
                  <i class="fas fa-search"></i>
              </button>
          </div>
      </form>
  
        <div class="d-flex align-items-center">
          @if(User.Identity.IsAuthenticated)
          {
            <div class="d-flex align-items-center">
              <i class="bi bi-person-circle text-white" style="font-size: 24px;"></i>
              <p class="text-white mb-0 ms-2">@User.Identity.Name</p>
  
              <button class="btn btn-outline-light ms-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                <i class="bi bi-list"></i>
              </button>
            </div>
          }
          else
          {
            <div class="d-flex">
              <a asp-controller="Identity" asp-action="Login">
                <button class="btn btn-outline-light me-2">
                  <i class="fa-solid fa-user"></i> Giriş
                </button>
              </a>
              <a asp-controller="Identity" asp-action="Register">
                <button class="btn btn-outline-light">
                  <i class="fa-solid fa-user"></i> <i class="fa-solid fa-plus" style="font-size: 12px;"></i> Kayıt Ol
                </button>
              </a>
            </div>
          }
        </div>
      </div>
    </nav>
  </header>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel" data-bs-backdrop="false">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sidebarLabel">Menü</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          @if (User.IsInRole("Admin"))
          {
            <div style="font-size: 22px;">
              <a asp-controller="Identity" asp-action="UserOperations">Kullanıcı İşlemleri</a>
            </div>
            <div style="margin-top: 1%;">
              <a asp-controller="Role" asp-action="RoleCreate">Role Ekle</a>
              <a asp-controller="Role" asp-action="RoleOperations">Role İşlemleri</a>
            </div>
            <div>
              <a asp-controller="Admin" asp-action="AdminAdControlPanel">İlan  İşlemleri</a>
            </div>
            <ul class="navbar-nav">
              <li class="nav-item">
                <a asp-controller="Identity" asp-action="MyAccount" class="nav-link">Hesabım</a>
              </li>
              <li class="nav-item">
                <a asp-controller="Identity" asp-action="Logout" class="nav-link">Çıkış</a>
              </li>
            </ul>
          }
          else{

          <li class="nav-item">
            <a class="nav-link" asp-action="MyAccount" asp-controller="Identity">Hesabım</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="AdForwarding">İlan Ver</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Favorilerim</a>
          </li>
          <li class="nav-item">
            <a asp-controller="Identity" asp-action="Logout" class="nav-link">Çıkış</a>
          </li>
        }
        </ul>
      </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts",required:false)

          
        </main>
    </div>

    
    <script>
     function toggleMenu(menuId) {
  var menu = document.getElementById(menuId);

  if (menu.style.maxHeight) {
    menu.style.maxHeight = null;
  } else {
    menu.style.maxHeight = menu.scrollHeight + "px";
  }
}
      
    </script>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>