@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real Estate Detail Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
    }
    .main-image {
      width: 100%;
      height: 400px;
      object-fit: cover;
      border-radius: 10px;
    }
    .thumbnail {
      width: 100px;
      height: 80px;
      object-fit: cover;
      cursor: pointer;
      margin: 5px;
      border-radius: 5px;
      border: 2px solid transparent;
    }
    .thumbnail:hover, .thumbnail.active {
      border-color: #007bff;
    }
    .thumbnails-container {
      display: flex;
      justify-content: center;
      gap: 10px;
    }
  </style>
</head>
<body>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div>
        <img id="mainImage" src="https://via.placeholder.com/800x400" alt="Main House Image" class="main-image">
      </div>

      <div class="thumbnails-container mt-3">
        <img src="https://via.placeholder.com/150x100" alt="House Thumbnail 1" class="thumbnail active" onclick="changeImage(this)">
        <img src="https://via.placeholder.com/150x100" alt="House Thumbnail 2" class="thumbnail" onclick="changeImage(this)">
        <img src="https://via.placeholder.com/150x100" alt="House Thumbnail 3" class="thumbnail" onclick="changeImage(this)">
        <img src="https://via.placeholder.com/150x100" alt="House Thumbnail 4" class="thumbnail" onclick="changeImage(this)">
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function changeImage(element) {
    const mainImage = document.getElementById('mainImage');
    mainImage.src = element.src;

    document.querySelectorAll('.thumbnail').forEach(img => img.classList.remove('active'));

    element.classList.add('active');
  }
</script>

</body>
</html>
